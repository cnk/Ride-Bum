<h1>Listing events</h1>

<table id="event_list">
  <tr>
    <th>Name</th>
    <th>Destination</th>
    <th>Arrival time</th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= link_to event.name, event %></td>
    <td><%= event.destination %></td>
    <td><%= event.arrival_time.to_s %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Delete', event, data: {confirm: 'Are you sure?'}, method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

